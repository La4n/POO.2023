/*
1. Faça uma função que recebe por parâmetro o raio de uma esfera e calcula o seu
volume (v = 4/3 * π * r 3 ), onde r é o raio da esfera e π é uma constante igual a
3,14159265.
*/
package aula03;

import javax.swing.JOptionPane;


public class Aula03 {


    public static void main(String[] args) {
        String reti; 
float raio,pi,vol,r,V;
        
pi =    (float) 3.14159265;
reti = JOptionPane.showInputDialog("Valor do raio: ");
raio = Integer.parseInt(reti);

        vol = (float) 4/3 * pi;
        r = (raio*raio*raio);
        
        V = vol * r;
        
        JOptionPane.showMessageDialog(null,"O  Volume é: \n"+V);
    }
    
}
